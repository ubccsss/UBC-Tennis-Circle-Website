'use client';

import {
  Input,
  InputGroup,
  InputRightElement,
  Container,
  Flex,
  VStack,
  Heading,
  Icon,
  Image,
  Select,
  HStack,
  Button,
  Spacer,
  FormControl,
} from '@chakra-ui/react';
import {useSearchParams} from 'next/navigation';
import {FiArrowRight, FiInstagram} from 'react-icons/fi';
import z from 'zod';
import {useForm} from 'react-hook-form';
import {zodResolver} from '@hookform/resolvers/zod';

const schema = z.object({
  skill: z.number(),
  instagram: z.string(),
});

type Form = z.infer<typeof schema>;

const AddInfo = () => {
  const params = useSearchParams();
  const id = params.get('id');
  const picture = params.get('picture');

  const {
    handleSubmit,
    register,
    formState: {errors, isSubmitting},
  } = useForm<Form>({resolver: zodResolver(schema)});

  return (
    <Container maxW="container.xl" py={{base: '32', lg: '20'}}>
      <Flex flexDirection="row" w="100%" justifyContent="center" gap="36">
        <VStack width="450px">
          <Heading as="h1" size="2xl">
            Create your profile
          </Heading>
          <Image src={picture!} mt="10" boxSize="80px" />
          <form onSubmit={onSubmit}>
            <FormControl>
              <InputGroup size="lg" mt="10">
                <Select color="gray.500" placeholder="Skill level">
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </Select>
              </InputGroup>
            </FormControl>
            <InputGroup size="lg">
              <Input placeholder="Instagram Username" />

              <InputRightElement pointerEvents="none">
                <Icon as={FiInstagram} color="gray.500" />
              </InputRightElement>
            </InputGroup>
            <Flex mt={5} w="full">
              <Spacer />
              <Button colorScheme="brand" size="md">
                Skip
              </Button>
              <Button
                colorScheme="brand"
                type="submit"
                loadingText="Updating ..."
                size="md"
                rightIcon={<Icon as={FiArrowRight} />}
                marginLeft={2}
              >
                Continue
              </Button>
            </Flex>
          </form>
        </VStack>
      </Flex>
    </Container>
  );
};

export default AddInfo;
